{
  "name": "tapedeck-client",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "ws --directory src -p 9001",
    "lint": "eslint",
    "test": "npm run start & npx wait-on http://localhost:9001 & npx cypress run"
  },
  "dependencies": {
    "axios": "^0.21.0"
  },
  "devDependencies": {
    "cypress": "^6.1.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-vue": "^7.3.0",
    "local-web-server": "^4.2.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2017": true,
      "browser": true,
      "node": true,
      "cypress": true
    },
    "plugins": [
      "vue",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-essential",
      "prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "strict": "error",
      "semi": "error",
      "prettier/prettier": "error"
    },
    "ignorePatterns": [
      "node_modules/",
      "types/"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "quoteProps": "consistent"
  }
}
